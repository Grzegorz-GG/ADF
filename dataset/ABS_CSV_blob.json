{
	"name": "ABS_CSV_blob",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AnyBlobStorage",
			"type": "LinkedServiceReference",
			"parameters": {
				"ConnectionSecretName": "blobkey"
			}
		},
		"parameters": {
			"Container": {
				"type": "string"
			},
			"Directory": {
				"type": "string"
			},
			"File": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "@dataset().File",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().Directory",
					"type": "Expression"
				},
				"container": {
					"value": "@dataset().Container",
					"type": "Expression"
				}
			},
			"columnDelimiter": ",",
			"rowDelimiter": "\n",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "SalesMonth",
				"type": "String"
			},
			{
				"name": "Retailer",
				"type": "String"
			},
			{
				"name": "Product",
				"type": "String"
			},
			{
				"name": "SalesValueUSD",
				"type": "String"
			},
			{
				"name": "UnitsSold",
				"type": "String"
			}
		]
	}
}